<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Caja de texto con bordes -->
    <TextView
        android:id="@+id/voiceResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El texto aparecerá aquí"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/textbox_border"
        android:layout_marginBottom="30dp"/>


    <Button
        android:id="@+id/startVoiceRecognitionButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/recorder"
        android:backgroundTint="#8A0808"
        android:backgroundTintMode="add"
        android:text="Grabar"
        android:textColorLink="#7F0707"
        android:textSize="48sp"
        app:iconTint="@color/red_pressed" />
    <Button
        android:id="@+id/historyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textSize="48sp"
        android:layout_below="@id/alarmsButton"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"/>
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/historyButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:text="Volver Atrás"
        android:textSize="48sp" />

</LinearLayout>
