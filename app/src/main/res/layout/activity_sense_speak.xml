<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título en la parte superior -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SenseSpeak"
        android:textSize="67sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"/>

    <!-- Pregunta -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu situación?"
        android:textSize="39sp"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- Botón Discapacidad Visual -->
    <Button
        android:id="@+id/visualDisabilityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discapacidad Visual"
        android:textSize="48sp"
        android:layout_below="@id/questionTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/black"
        android:layout_marginEnd="16dp"/>


    <!-- Botón Discapacidad Auditiva -->
    <Button
        android:id="@+id/auditoryDisabilityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discapacidad Auditiva"
        android:background="@color/black"
        android:textSize="48sp"
        android:layout_below="@id/visualDisabilityButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Texto y Botón "Narrador" -->
    <LinearLayout
        android:id="@+id/narratorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">

        <!-- Texto "Narrador" -->
        <TextView
            android:id="@+id/narratorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Narrador:"
            android:textSize="48sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"/>

        <!-- Botón On/Off -->
        <ToggleButton
            android:id="@+id/narratorToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>
